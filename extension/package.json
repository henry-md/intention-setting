{
  "name": "chrome-extension-react",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:old": "tsc -b && vite build",
    "build": "tsc -b && vite build && esbuild src/scripts/content.ts --bundle --outfile=build/content.js --format=iife --platform=browser --jsx=automatic",
    "lint": "eslint .",
    "preview": "vite preview",
    "zip": "cd build && zip -r ../extension.zip . -x '*.map'"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.10",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.562.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/chrome": "^0.0.326",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "esbuild": "^0.25.5",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "tailwindcss": "^4.1.10",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "6.0.5",
    "vite-plugin-static-copy": "2.3.0"
  }
}
